    //             docker system prune -f || true
    //         """
    //     }
        
    //     success {
    //         echo "ðŸŽ‰ Pipeline executado com sucesso!"
            
    //         // Notificar sucesso
    //         sh """
    //             echo "âœ… Deployment Success - Build ${BUILD_NUMBER}" > success_notification.txt
